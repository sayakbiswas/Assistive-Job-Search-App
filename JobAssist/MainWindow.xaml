<Window x:Class="JobAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobAssist"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Closing="MainWindow_OnClosing"
        Title="MainWindow" Height="500" Width="525" WindowStartupLocation="CenterScreen" Background="Black">
    <Grid>
        <StackPanel Margin="100">

            <Image gif:ImageBehavior.AnimatedSource="Images/cortana-pulse.gif" />
            <Button Width="100" Height="30" FontSize="16" Content="Search Jobs" Command="{Binding StartDialogueCommand}" />

        </StackPanel>
            
    </Grid>
</Window>
